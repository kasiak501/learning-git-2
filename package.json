{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.4",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.0.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html",
    "watch": "npm-run-all watch:*",
    "watch:browsersync": "globstar browser-sync start --server -- files css/*.css  *.html ",
    "build": "npm run build:clean && npm run build:sass",
    "build:clean": "rm -rf css/*.css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "buil:autoprefixer": "autoprefixer-cli -d css",
    "build:sassprefixer": "npm run build:sass && npm run build:autoprefixer",
    "watch:sassprefixer": "globstar onchange css/style.css -- run build:sassprefixer",
    "init-project": "npm-run-all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasiak501/learning-git-2.git"
  },
  "keywords": [],
